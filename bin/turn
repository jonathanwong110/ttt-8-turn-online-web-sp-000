#!/usr/bin/env ruby

require_relative '../lib/turn'
 
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
 
puts "Welcome to Tic Tac Toe!"

def display_board(board)
  puts (" #{board[0]} | #{board[1]} | #{board[2]} ")
  puts ("-----------")
  puts (" #{board[3]} | #{board[4]} | #{board[5]} ")
  puts ("-----------")
  puts (" #{board[6]} | #{board[7]} | #{board[8]} ")
end

input = gets.strip
index = input_to_index(input)

move(board, index)

display_board(board)

turn(board)
turn(board)
turn(board)
turn(board)
turn(board)
turn(board)
turn(board)
turn(board)
turn(board)